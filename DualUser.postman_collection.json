      {
        "name": "üí¨ User2 ‚Ä¢ Interacts with User1",
        "item": [
          {
            "name": "User2 ‚Ä¢ Like User1‚Äôs Image Post",
            "request": {
              "method": "POST",
              "header": [{ "key": "Authorization", "value": "Bearer {{user2Token}}" }],
              "url": "http://localhost:5000/api/posts/{{postId}}/like"
            }
          },
          {
            "name": "User2 ‚Ä¢ Like User1‚Äôs Video Post",
            "request": {
              "method": "POST",
              "header": [{ "key": "Authorization", "value": "Bearer {{user2Token}}" }],
              "url": "http://localhost:5000/api/posts/{{videoPostId}}/like"
            }
          },
          {
            "name": "User2 ‚Ä¢ Comment on User1‚Äôs Image Post",
            "event": [{
              "listen": "test",
              "script": {
                "exec": [
                  "let r = pm.response.json();",
                  "pm.environment.set('commentId', r.data?._id);"
                ]
              }
            }],
            "request": {
              "method": "POST",
              "header": [
                { "key": "Authorization", "value": "Bearer {{user2Token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"post_id\": \"{{postId}}\",\n  \"text\": \"Great image post, User1! üì∏\"\n}"
              },
              "url": "http://localhost:5000/api/comments"
            }
          },
          {
            "name": "User2 ‚Ä¢ Comment on User1‚Äôs Video Post",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Authorization", "value": "Bearer {{user2Token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"post_id\": \"{{videoPostId}}\",\n  \"text\": \"Awesome video, User1! üé•üî•\"\n}"
              },
              "url": "http://localhost:5000/api/comments"
            }
          },
          {
            "name": "User2 ‚Ä¢ Like User1‚Äôs Comment",
            "request": {
              "method": "POST",
              "header": [{ "key": "Authorization", "value": "Bearer {{user2Token}}" }],
              "url": "http://localhost:5000/api/comments/{{commentId}}/like"
            }
          },
          {
            "name": "User2 ‚Ä¢ Send Friend Request to User1",
            "event": [{
              "listen": "test",
              "script": {
                "exec": [
                  "let r = pm.response.json();",
                  "pm.environment.set('requestId', r.data?._id);"
                ]
              }
            }],
            "request": {
              "method": "POST",
              "header": [
                { "key": "Authorization", "value": "Bearer {{user2Token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"receiver_id\": \"{{user1Id}}\"\n}"
              },
              "url": "http://localhost:5000/api/friends/request"
            }
          }
        ]
      },
  
      {
        "name": "ü§ù User1 ‚Ä¢ Accepts Friend Request",
        "request": {
          "method": "POST",
