    "item": [
  
      {
        "name": "Auth â€¢ Register",
        "event": [{
          "listen": "test",
          "script": { "exec": [
            "let r = pm.response.json();",
            "pm.environment.set('token', r.token);",
            "pm.environment.set('userId', r.user?._id);"
          ]}
        }],
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": { "mode": "raw", "raw": "{\n  \"name\": \"Test User\",\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}" },
          "url": "http://localhost:5000/api/auth/register"
        }
      },
  
